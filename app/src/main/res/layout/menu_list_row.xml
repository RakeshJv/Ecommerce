<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/white"
    android:clickable="true"
    android:focusable="true"
    android:orientation="vertical"
    android:padding="20dp"
    android:paddingBottom="@dimen/row_padding_vertical"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/row_padding_vertical">

    <TextView
        android:id="@+id/shopName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="National General Store"
        android:textColor="@color/itemName"
        android:textSize="20dp" />


    <LinearLayout
        android:id="@+id/adressLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintTop_toBottomOf="@+id/shopName">


    <TextView
        android:id="@+id/labelAddress"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:text="Address"
        app:layout_constraintTop_toBottomOf="@+id/shopName"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="0dp" />

    <TextView
        android:id="@+id/address"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:text="qqqqqssssssssssssssssssssssssssssssssssssssssssssssssssssssssssssssssssssqqqqqqqaaaaaaaaaaawcsdcvdscdssdqqqqqqqqqqqqqqqqqqqqqqqqqqqqqqddddddddddddddddddddddddddddddddddddddddddsssssssssssssssssssssss"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/labelAddress"
        tools:ignore="MissingConstraints" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/landLinePhoneLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintTop_toBottomOf="@+id/adressLayout">


    <TextView
        android:id="@+id/labelPhone"
        android:layout_width="wrap_content"
        android:layout_height="21dp"
        android:ems="10"
        android:layout_gravity="center"
        android:text="Phone : "
        android:gravity="left"
  />

    <TextView
        android:id="@+id/phone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="12345678901234"
  />
    ></LinearLayout>


    <LinearLayout
        android:id="@+id/mobilePhoneLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintTop_toBottomOf="@+id/landLinePhoneLayout">


        <TextView
            android:id="@+id/labelMobilePhone"
            android:layout_width="wrap_content"
            android:layout_height="21dp"
            android:ems="10"
            android:layout_gravity="center"
            android:text="Mobile : "
            android:gravity="left"
            />

        <TextView
            android:id="@+id/mobilePhone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="12345678901234"
            />

        ></LinearLayout>



</android.support.constraint.ConstraintLayout>